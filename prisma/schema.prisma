generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// modelos del proyecto

model category {
  id Int @id @default(autoincrement())
  name String @db.VarChar(60)
  carros car[]
}

model comunidad {
  //decoradores: dan comportamientos y funcionalidades extras a los elemenmtos decorados
  // @id : establece PK al campo
  // @default : valor por defecto
  id Int @id @default(autoincrement())
  name String @db.VarChar(60)
  carros car[]
}

model car{
  id Int @id @default(autoincrement())
  model String @db.VarChar(15)
  release_date DateTime @db.DateTime
  is_available Boolean @default(true)
  price Decimal @db.Decimal(10,2)
  //campo de la clave foranea
  comunidad_id Int
  //relacion con la tabla comnidad
  comunidad comunidad @relation(fields: [comunidad_id], references: [id])
  category_id Int
  category category @relation(fields: [category_id], references: [id])
}

model Notificaciones {
  id Int @id @default(autoincrement())
  id_usuario String @db.VarChar(10)
  tipo String @db.VarChar(30)
  mensaje String @db.VarChar(50)
  fecha_envio DateTime @db.Date
  categoria String @db.VarChar(15)
}


model Participacion {
  id Int @id @default(autoincrement())
  id_usuario String @db.VarChar(10)
  id_comunidad String @db.VarChar(10)
  rol String @db.VarChar(15)
  fecha_ingreso DateTime @db.Date
  activo Boolean @default(true)
}


model Progreso {
  id Int @id @default(autoincrement())
  id_usuario String @db.VarChar(10)
  id_tipo_tecnica String @db.VarChar(10)
  metrica String @db.VarChar(15)
  valor_actual String @db.VarChar(5)
  valor_anterior String @db.VarChar(5)
  tendencia String @db.VarChar(50)
  fecha DateTime @db.Date
  periodo String @db.VarChar(10)
  contexto String @db.VarChar(50)
}

model Recordatorio {
  id Int @id @default(autoincrement())
  id_usuario String @db.VarChar(10)
  tipo String @db.VarChar(30)
  mensaje String @db.VarChar(50)
  fecha DateTime @db.Date
  activo Boolean @default(true)
}
