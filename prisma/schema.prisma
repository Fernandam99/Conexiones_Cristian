generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// modelos del proyecto

model category {
  id Int @id @default(autoincrement())
  name String 
  carros car[]
}

model comunidad {
  //decoradores: dan comportamientos y funcionalidades extras a los elemenmtos decorados
  // @id : establece PK al campo
  // @default : valor por defecto
  id Int @id @default(autoincrement())
  name String 
  carros car[]
}

model car{
  id Int @id @default(autoincrement())
  plate String 
  release_date DateTime
  is_available Boolean @default(true)
  price Decimal 
  //campo de la clave foranea
  comunidad_id Int
  //relacion con la tabla comnidad
  comunidad comunidad @relation(fields: [comunidad_id], references: [id])
  category_id Int
  category category @relation(fields: [category_id], references: [id])
}

model Notificaciones {
  id Int @id @default(autoincrement())
  id_usuario String 
  tipo String 
  mensaje String 
  fecha_envio DateTime 
  categoria String 
}


model Participacion {
  id Int @id @default(autoincrement())
  id_usuario String 
  id_comunidad String 
  rol String 
  fecha_ingreso DateTime 
  activo Boolean @default(true)
}


model Progreso {
  id Int @id @default(autoincrement())
  id_usuario String 
  id_tipo_tecnica String 
  metrica String 
  valor_actual String 
  valor_anterior String 
  tendencia String 
  fecha DateTime 
  periodo String 
  contexto String 
}

model Recordatorio {
  id Int @id @default(autoincrement())
  id_usuario String 
  tipo String 
  mensaje String 
  fecha DateTime 
  activo Boolean @default(true)
}


//AUTH shemas
model estado {
  id Int @id @default(autoincrement())
  estado String
  usuario usuario[]
}

model usuario{
  id  Int @id @default(autoincrement())
  username String  @unique
  password String
  estado_id Int @default(1)
  estado estado @relation(fields: [estado_id], references: [id])
}


